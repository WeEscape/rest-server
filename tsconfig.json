{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es5", "es6"],
    "outDir": "./dist"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJs",
      "typeRoots": ["./@types", "./node_modules/@types"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
